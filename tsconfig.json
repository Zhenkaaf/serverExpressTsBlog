{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./types",
            "@types",
            "./node_modules/@types",
            "node_modules/@types",
            "./src/types"
        ],
        "types": ["express"]
    },
    "include": ["src/**/*.ts", "src/types/**/*.d.ts"]
}
